package pe.edu.cibertec.api_rest_producto_grupo55.Controller;

import java.util.List;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import pe.edu.cibertec.api_rest_producto_grupo55.remote.ProductoRemoteService;

@RestController
@RequestMapping("api/v1")
public class ProveedorController {
	
	private final ProductoRemoteService productoRemoteService;
	
	public ProveedorController(ProductoRemoteService productoRemoteService) {
		this.productoRemoteService = productoRemoteService;
	}

   @GetMapping("/proveedores-productos")
   
   public ResponseEntity<List<String>> listadoProductoProveedor() {

       List<String> productosss = productoRemoteService.listadoproductos();
       return ResponseEntity.ok(productosss);
   }








	@GetMapping("/mensajes")
	public ResponseEntity<String> getmensaje() {
		return ResponseEntity.ok("Integracion completada exitosamente");
	}

}
